{
  "name": "Elvento GQ+ Company Management tool",
  "version": "1.05.17",
  "icons": { "16": "icon.png",
           "48": "icon.png",
          "128": "icon.png" },
  "manifest_version": 2,
  "description": "GQ+ Business Management tool.Automates Company Data computation and Management with help of complex algorithms from its data servers.",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
   
 "background": {
  "scripts": ["background.js","js/jquery.js"]
},

"externally_connectable": {
  "matches": ["http://localhost/gq/extension/*"]
},
 
  "content_scripts": [
    {
        "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
   
  "permissions": [
    "http://*/*",
    "https://*/*",
    "contextMenus",
    "tabs",
    "storage"
  ]
}